steps:
  - name: gcr.io/cloud-builders/docker
    args: ['build', '--tag=${IMAGE}', '--no-cache=true', '.']
    id: BUILD
  - name: gcr.io/gcp-runtimes/structure_test
    args: ['--image', '${IMAGE}',
    '-v', '--config', '/workspace/test/test_config.yaml']
    id: STRUCTURE_TEST
  - name: gcr.io/gcp-runtimes/integration_test
    args: [
      '-i', '${IMAGE}',
      '-d', 'test/integration']
images: ['${IMAGE}']
